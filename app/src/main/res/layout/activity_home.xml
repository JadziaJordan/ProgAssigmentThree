<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    android:padding="24dp"
    tools:context=".HomeActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal">

        <!-- Larger Image -->
        <ImageView
            android:id="@+id/homeImage"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:src="@drawable/djmc"
            android:layout_marginBottom="24dp"
            android:scaleType="centerCrop"
            android:contentDescription="DJMC Logo" />

        <!-- Welcome Text -->
        <TextView
            android:id="@+id/homePageText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Welcome to DJMC"
            android:textSize="28sp"
            android:textStyle="bold"
            android:textColor="#000000"
            android:layout_marginBottom="24dp" />

        <!-- Description + Button: View Expenses -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Track all your expenses in one place and monitor where your money goes."
            android:textColor="#000000"
            android:textSize="14sp"
            android:layout_marginBottom="8dp" />

        <Button
            android:id="@+id/buttonViewExpenses"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="📊 View Expenses"
            android:backgroundTint="#6200EE"
            android:textColor="#000000"
            android:layout_marginBottom="24dp"
            android:padding="12dp"
            android:fontFamily="sans-serif-medium" />

        <!-- Description + Button: View Categories -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Organize your expenses by custom categories like Food, Travel, etc."
            android:textColor="#000000"
            android:textSize="14sp"
            android:layout_marginBottom="8dp" />

        <Button
            android:id="@+id/buttonViewCategories"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="📁 View Categories"
            android:backgroundTint="#03DAC5"
            android:textColor="#000000"
            android:layout_marginBottom="24dp"
            android:padding="12dp"
            android:fontFamily="sans-serif-medium" />

        <!-- Description + Button: Debt Tracking -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Keep an eye on debts you owe or are owed, and stay on top of repayments."
            android:textColor="#000000"
            android:textSize="14sp"
            android:layout_marginBottom="8dp" />

        <Button
            android:id="@+id/buttonDebtTracking"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="💸 Debt Tracking"
            android:backgroundTint="#FF0266"
            android:textColor="#000000"
            android:layout_marginBottom="24dp"
            android:padding="12dp"
            android:fontFamily="sans-serif-medium" />

        <!-- Description + Button: View Goals -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Set and manage your financial goals, like saving or budgeting limits."
            android:textColor="#000000"
            android:textSize="14sp"
            android:layout_marginBottom="8dp" />

        <Button
            android:id="@+id/buttonViewGoals"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="🎯 View Goals"
            android:backgroundTint="#3700B3"
            android:textColor="#000000"
            android:layout_marginBottom="24dp"
            android:padding="12dp"
            android:fontFamily="sans-serif-medium" />

    </LinearLayout>
</ScrollView>
