<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    tools:context=".AddGoals">

    <!-- Title TextView -->
    <TextView
        android:id="@+id/titleText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Add Goal"
        android:textSize="24sp"
        android:textStyle="bold"
        android:textColor="@android:color/black"
        android:layout_marginTop="24dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <ScrollView
        android:id="@+id/scrollView"
        android:layout_width="413dp"
        android:layout_height="577dp"
        android:padding="16dp"
        app:layout_constraintBottom_toTopOf="@id/bottomNav"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/titleText">

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:padding="16dp"
            app:cardBackgroundColor="@android:color/white"
            app:cardCornerRadius="16dp"
            app:cardElevation="6dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <!-- Category Label -->
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp"
                    android:text=" Category"
                    android:textColor="@android:color/black"
                    android:textSize="16sp"
                    android:textStyle="bold" />

                <!-- Category Spinner -->
                <Spinner
                    android:id="@+id/spinnerCategory"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:layout_marginBottom="16dp" />

                <!-- Month Label -->
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp"
                    android:text=" Month"
                    android:textColor="@android:color/black"
                    android:textSize="16sp"
                    android:textStyle="bold" />

                <!-- Month EditText -->
                <EditText
                    android:id="@+id/editTextMonth"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:layout_marginBottom="16dp"
                    android:backgroundTint="#0F0E0E"
                    android:drawableEnd="@android:drawable/arrow_down_float"
                    android:drawablePadding="8dp"
                    android:focusable="false"
                    android:hint="Select Month"
                    android:inputType="none"
                    android:paddingVertical="12dp"
                    android:textColor="#000000" />

                <!-- Minimum Goal Label -->
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp"
                    android:text=" Minimum Goal"
                    android:textColor="@android:color/black"
                    android:textSize="16sp"
                    android:textStyle="bold" />

                <!-- Minimum Goal EditText -->
                <EditText
                    android:id="@+id/editTextMinGoal"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:layout_marginBottom="16dp"
                    android:backgroundTint="#0F0E0E"
                    android:hint="Enter Minimum Goal"
                    android:inputType="numberDecimal"
                    android:paddingVertical="12dp"
                    android:textColor="#000000" />

                <!-- Maximum Goal Label -->
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp"
                    android:text=" Maximum Goal"
                    android:textColor="@android:color/black"
                    android:textSize="16sp"
                    android:textStyle="bold" />

                <!-- Maximum Goal EditText -->
                <EditText
                    android:id="@+id/editTextMaxGoal"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:layout_marginBottom="24dp"
                    android:backgroundTint="#0F0E0E"
                    android:hint="Enter Maximum Goal"
                    android:inputType="numberDecimal"
                    android:paddingVertical="12dp"
                    android:textColor="#000000" />

                <!-- Save Button -->
                <Button
                    android:id="@+id/buttonSaveGoal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="16dp"
                    android:backgroundTint="@color/blue"
                    android:text="Save Goal"
                    android:textAllCaps="false"
                    android:textColor="@android:color/white" />

                <!-- Back Button -->
                <Button
                    android:id="@+id/backBtn"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:backgroundTint="@color/blue"
                    android:text="Back"
                    android:textAllCaps="false"
                    android:textColor="@android:color/white" />

            </LinearLayout>

        </androidx.cardview.widget.CardView>

    </ScrollView>

    <!-- Fixed Bottom Navigation -->
    <LinearLayout
        android:id="@+id/bottomNav"
        android:layout_width="0dp"
        android:layout_height="90dp"
        android:background="@color/blue"
        android:elevation="8dp"
        android:gravity="center_horizontal"
        android:orientation="horizontal"
        android:padding="12dp"
        android:weightSum="4"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <com.google.android.material.button.MaterialButton
            android:id="@+id/GoalsNav"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:backgroundTint="@color/blue"
            android:textColor="@color/black"
            app:icon="@drawable/goal"
            app:iconGravity="top"
            app:iconPadding="4dp" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/FinancialNav"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:backgroundTint="@color/blue"
            android:textColor="@color/black"
            app:icon="@drawable/budget"
            app:iconGravity="top"
            app:iconPadding="4dp" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/DebtNav"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:backgroundTint="@color/blue"
            android:textColor="@color/black"
            app:icon="@drawable/money"
            app:iconGravity="top"
            app:iconPadding="4dp" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/GraphesNav"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:backgroundTint="@color/blue"
            android:textColor="@color/black"
            app:icon="@drawable/img"
            app:iconGravity="top"
            app:iconPadding="4dp" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
